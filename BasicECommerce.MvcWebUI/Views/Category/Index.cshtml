@model BasicECommerce.MvcWebUI.Models.CategoryListViewModel
<h3>Categories</h3>
<div>
    <div class="list-group">
        @foreach (var category in Model.Categories)
        {
            @Html.RouteLink(category.CategoryName,
                new {controller = "Product", action = "List", categoryId = category.CategoryId},
                new {@class = $"list-group-item list-group-item-action {(ViewBag.CurrentCategoyId == category.CategoryId ? "active" : "")}" })
        }

    </div>
</div>