@model BasicECommerce.MvcWebUI.Models.ProductListViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products</h2>
<div class="row">
    @foreach (var product in Model.Products)
    {
        <div class="card text-center my-2 mx-2" style="width: 15rem;">
            <img class="card-img" src="https://www.svgrepo.com/show/71276/image.svg" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@product.ProductName</h5>
                @Html.ActionLink("Go to Product","Detail",new{id=product.ProductId},new {@class = "btn btn-outline-info" })
            </div>
        </div>
    }
</div>